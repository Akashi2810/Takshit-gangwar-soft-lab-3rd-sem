import java.util.Scanner; 
public class program14 
    //binary to decimal
{
    public static void main(String[] args)

    {
        int decimal=0;
        int binary=0;
        int j=1;
        int base=1;
        int rem=0;
        int k=0;

      Scanner sc = new Scanner(System.in);
        {System.out.println("Enter binary number");
        binary =sc.nextInt();
        sc.close();
while (binary!=0)
      
{
    rem=binary%10;
decimal=rem*base;
           
           k = k + decimal;
           
           binary = binary/10;
         
           j=j*10;
           
           base = base *2;

}
System.out.println("Decimal = " +k);

    }
}
}
